{
  "compilerOptions": {
    "lib": ["ESNext", "ES2021"],
    "module": "CommonJS",
    "target": "ES2021",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmit": true,
    "typeRoots": ["./src/types"],
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": "."
  },
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
